{ lib
, buildPythonPackage
, fetchFromGitHub 
, click
, numpy
, openpyxl
, pandas
, pypdf2
, tabula-py
}:

buildPythonPackage rec {
  pname = "Pdf2TimeTable";
  version = "1.0.0";

  src = fetchFromGitHub {
    owner = "SCOTT-HAMILTON";
    repo = "Pdf2TimeTable";
    rev = "d9c8b2f1001865a356cdb61776b8b52adc42b2d3";
    sha256 = "12qsa3z59g3418wbdfnmb6cpm7rszjy39zcd7rhw4lh6dki765sq";
  };

  propagatedBuildInputs = [
    click
    numpy
    pandas
    pypdf2
    openpyxl
    tabula-py
  ];

  doCheck = false;

  meta = with lib; {
    description = "Converts a pdf timetable (generated by pronote) to an excel timetable (that can be used with TimeTable2Header)";
    license = licenses.mit;
    maintainers = [ "Scott Hamilton <sgn.hamilton+nixpkgs@protonmail.com>" ];
    platforms = platforms.linux;
  };
}
